{
  "name": "custom-os-desktop",
  "version": "1.0.0",
  "description": "Custom Electron Desktop Environment for CustomOS",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron . --no-sandbox",
    "dev": "NODE_ENV=development electron . --no-sandbox",
    "build": "electron-builder --linux deb",
    "build:all": "electron-builder --linux",
    "pack": "electron-builder --dir"
  },
  "author": "CustomOS Team",
  "license": "MIT",
  "homepage": "https://github.com/custom-os/custom-os",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "systeminformation": "^5.21.20"
  },
  "build": {
    "appId": "com.customos.desktop",
    "productName": "CustomOS Desktop",
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "category": "System",
      "maintainer": "customos@example.com",
      "vendor": "CustomOS",
      "synopsis": "CustomOS Desktop Environment",
      "description": "Modern desktop environment built with Electron for CustomOS",
      "desktop": {
        "Name": "CustomOS Desktop",
        "Type": "Application",
        "Categories": "System;"
      }
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "extraFiles": [
      {
        "from": "resources",
        "to": "resources",
        "filter": ["**/*"]
      }
    ]
  }
}
