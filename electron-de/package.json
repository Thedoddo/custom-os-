{
  "name": "customos-desktop",
  "version": "0.1.0",
  "description": "CustomOS Electron Desktop Environment",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "desktop-environment",
    "linux",
    "electron",
    "wine"
  ],
  "author": "CustomOS Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0"
  },
  "dependencies": {
    "better-sqlite3": "^9.2.2",
    "ini": "^4.1.1",
    "chokidar": "^3.5.3"
  },
  "build": {
    "appId": "com.customos.desktop",
    "productName": "CustomOS Desktop",
    "directories": {
      "output": "dist"
    },
    "linux": {
      "target": [
        "pacman"
      ],
      "category": "System"
    }
  }
}
