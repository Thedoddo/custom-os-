#!/bin/sh
# Install custom Electron desktop package

echo "Installing CustomOS Desktop..."

# Find and install the .deb if it exists
if [ -d /opt/customos ]; then
    for deb in /opt/customos/*.deb; do
        if [ -f "$deb" ]; then
            echo "Installing $deb..."
            dpkg -i "$deb" || apt-get install -f -y
        fi
    done
fi

exit 0
